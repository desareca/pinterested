<p id="notice"><%= notice %></p>

<div class="image">
  <%= image_tag @pin.image, class:'img-responsive' %>
</div>

<p>
  <strong>Description:</strong>
  <%= @pin.description %>
</p>

<% if @pin.user == current_user && user_signed_in? %>
  <%= link_to 'Edit', edit_pin_path(@pin), class: 'text-success text-opacity-80' %> |
<% end %>
<%= link_to 'Back', pins_path, class: 'text-success text-opacity-80' %>
