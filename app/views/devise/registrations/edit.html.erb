<div class="panel panel-default">
  <div class="panel-heading"><h2>Editar Usuario</h2></div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label "Nombre" %>
        <%= f.text_field :name, class: "form-control", :autofocus => true %>
      </div>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control'%>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Actualmente esperando confirmación para: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="field">
        <%= f.label "Contraseña" %> <i>(déjelo en blanco si no quiere cambiarlo)</i><br />
        <%= f.password_field :password, autocomplete: "nueva contraseña", class: 'form-control' %>
        <% if @minimum_password_length %>
          <br />
          <em>Mínimo <%= @minimum_password_length %> caracteres</em>
        <% end %>
      </div>
      <div class="field">
        <%= f.label "Confirmar contraseña" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "nueva contraseña", class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label "Contraseña actual" %> <i>(necesitamos su contraseña actual para confirmar sus cambios)</i><br />
        <%= f.password_field :current_password, autocomplete: "contraseña actual" , class: 'form-control'%>
      </div>
      <div class="actions">
        <%= f.submit "Actualizar", class: 'btn bg-success bg-opacity-70 my-2' %>
      </div>
    <% end %>
  </div>
  <div class="panel-footer">
    <h3>Eliminar mi cuenta</h3>
    <p>¿Insatisfecho? <%= button_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete, class: 'btn bg-success bg-opacity-50' %></p>
    <%= link_to "Volver", :back%>
  </div>
</div>


